<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Redux"
                   namespace="Redux.Database.Models">

  <class name="EventConfig" table="event_config">
    <id name="Id" column="id">
      <generator class="identity" />
    </id>
    <property name="EventCode" column="event_code" />
    <property name="Title" column="title" />
    <property name="MaxSignups" column="max_signups" />
    <property name="MaxTicketsPerPlayer" column="max_tickets_per_player" />
    <property name="WinnersCount" column="winners_count" />
    <property name="RewardType" column="reward_type" />
    <property name="RewardValue" column="reward_value" />
    <property name="StartsAt" column="starts_at" />
    <property name="EndsAt" column="ends_at" />
    <property name="CreatedAt" column="created_at" />
    <property name="Status" column="status" />
  </class>

</hibernate-mapping>
